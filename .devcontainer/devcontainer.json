{
  "name": "AI Coding Essentials",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "pip install --user -r requirements.txt && npm install -g yamlresume",
  "forwardPorts": [8888]
}
